$desktop-num = 4
$file-padding = 18px
$file-background-color = #CCC

$dropzone-outline = 2px dashed black;
$dropzone-outline-offset = 0;
$dropzone-outline-offset-drag = 4px;
$dropzone-hover-color = #EfEfEf

$file-border-radius = 12%

clearfix()
    &:before,
    &:after
        content: " "; /* 1 */
        display: table; /* 2 */

    &:after
        clear: both;
.VueFileUploader
    text-align:center
    *
        box-sizing: border-box
    &__dropzone
        transition: all .3s
        clearfix()
        background-color: white
        outline: $dropzone-outline;
        outline-offset: $dropzone-outline-offset;
        min-height: 130px;
        width: 100%;
        cursor:pointer
        &:hover
            background-color:$dropzone-hover-color
            outline-offset: $dropzone-outline-offset-drag;
        &--drag
            outline-offset: $dropzone-outline-offset-drag;
    &__file
        float:left
        // margin: $file-padding
        padding: $file-padding
        // margin-left: (100%/$desktop-num);
        width: (100%*( 1/$desktop-num ))


        &__content
            background-color: $file-background-color
            width: 100%;
            height: auto;
            padding-bottom: 100%;
            position: relative
            background-position: center;
            background-size: contain
            background-repeat: no-repeat
            border-radius: $file-border-radius;
            // margin: $file-padding
    &__remove
        cursor: pointer
        position: absolute
        background-color: #FFF
        width:20px;
        height:20px;
        top: -5px;
        right: -5px;
        text-align:center
        border-radius: 50%;
        box-shadow: 2px 2px 5px black
    &__input
        position: absolute
        top: -9999999px
        left: -9999999px
